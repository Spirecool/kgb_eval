{% extends 'base.html.twig' %}

{% block title %}Agent{% endblock %}

{% block body %}
    <h1>Agent</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ agent.id }}</td>
            </tr>
            <tr>
                <th>Last_name</th>
                <td>{{ agent.lastName }}</td>
            </tr>
            <tr>
                <th>First_name</th>
                <td>{{ agent.firstName }}</td>
            </tr>
            <tr>
                <th>Identification_code</th>
                <td>{{ agent.identificationCode }}</td>
            </tr>
            <tr>
                <th>Birthday</th>
                <td>{{ agent.birthday ? agent.birthday|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Nationality</th>
                <td>{{ agent.nationality }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_agent_index') }}">back to list</a>

    <a href="{{ path('app_agent_edit', {'id': agent.id}) }}">edit</a>

