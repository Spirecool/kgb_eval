{% extends 'base.html.twig' %}

{% block title %}Mission{% endblock %}

{% block body %}
    <h1>Mission</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ mission.id }}</td>
            </tr>
            <tr>
                <th>Mission_code_name</th>
                <td>{{ mission.missionCodeName }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ mission.title }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ mission.description }}</td>
            </tr>
            <tr>
                <th>Mission_type</th>
                <td>{{ mission.missionType }}</td>
            </tr>
            <tr>
                <th>Mission_status</th>
                <td>{{ mission.missionStatus }}</td>
            </tr>
            <tr>
                <th>Start_date</th>
                <td>{{ mission.startDate ? mission.startDate|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>End_date</th>
                <td>{{ mission.endDate ? mission.endDate|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Target</th>
                <td>
                    {% for mission in mission.targets %}
                        <li>{{targets.target_code_name}}</li>
                    {% endfor %}
                </td>
            </tr>

            <tr>
        </tbody>
    </table>

    <a href="{{ path('app_mission_index') }}">back to list</a>

    {% if is_granted('ROLE_ADMIN') %}
        <a href="{{ path('app_mission_edit', {'id': mission.id}) }}">edit</a>
    {% endif %}




    {{ include('missions/_delete_form.html.twig') }}
{% endblock %}
